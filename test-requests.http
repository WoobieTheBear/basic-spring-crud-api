# produces string "Response generated by BlackRestController"
GET http://localhost:8837/black/api/test
Content-Type: text/plain



# –––––––– "/people" endpoints ––––––––

# reads all entries
GET http://localhost:8837/black/people/entries
Content-Type: application/json

# reads entry by id
GET http://localhost:8837/black/people/entries/10002
Content-Type: application/json

# trigger out of bounds exception
GET http://localhost:8837/black/people/entries/5
Content-Type: application/json

# trigger generic exception
GET http://localhost:8837/black/people/entries/ab
Content-Type: application/json

# adds one entry
POST http://localhost:8837/black/people/entries
Content-Type: application/json

{
    "id": 0,
    "email": "nicolas.anderson@hackerz.com",
    "company": "Dagget Software Corp",
    "lastlogin": "2024-02-27T15:10:26.714+00:00",
    "lastname": "Anderson",
    "firstname": "Nicolas",
    "creationstamp": "2024-02-27T15:10:26.714+00:00"
}

@personId = 10009

# updates one entry
PUT http://localhost:8837/black/people/entries
Content-Type: application/json

{
    "id": {{personId}},
    "email": "nicolas.anderson@hackerz.com",
    "company": "Bat Cave Inc.",
    "lastlogin": "2024-02-27T15:10:26.714+00:00",
    "lastname": "Anderson Dawson",
    "firstname": "Nicolas Andrew",
    "creationstamp": "2024-02-27T15:10:26.714+00:00"
}

# deletes one entry
DELETE http://localhost:8837/black/people/entries/{{personId}}
Content-Type: application/json



# –––––––– "/companies" endpoints ––––––––

# reads all entries
GET http://localhost:8837/black/companies/entries
Content-Type: application/json

# adds one entry
POST http://localhost:8837/black/companies/entries
Content-Type: application/json

{
  "id": 0,
  "companyName": "Joker Inc.",
  "contactEmail": "info@the-joker.org"
}

@companyId = 1007

# reads entry by id
GET http://localhost:8837/black/companies/entries/{{companyId}}
Content-Type: application/json

# updates one entry
PUT http://localhost:8837/black/companies/entries
Content-Type: application/json

{
  "id": {{companyId}},
  "companyName": "Mister J. Inc.",
  "contactEmail": "info@the-joker.org"
}

# deletes one entry
DELETE http://localhost:8837/black/companies/entries/{{companyId}}
Content-Type: application/json



# –––––––– "/companies" endpoints ––––––––

# reads all entries
GET http://localhost:8837/black/black-api/workcontracts
Content-Type: application/json

# reads all entries sorted by salary desc
GET http://localhost:8837/black/black-api/workcontracts?sort=salary,desc
Content-Type: application/json

# reads all entries page=1 with size=3
GET http://localhost:8837/black/black-api/workcontracts?page=1&size=3
Content-Type: application/json

# adds one entry
POST http://localhost:8837/black/black-api/workcontracts
Content-Type: application/json

{
    "contractWorkload": 50,
    "salary": 7200,
    "companyId": 1001,
    "personId": 10001
}

@contractId = 100003

# updates one entry
PUT http://localhost:8837/black/black-api/workcontracts/{{contractId}}
Content-Type: application/json

{
    "contractWorkload": 70,
    "salary": 7200,
    "companyId": 1001,
    "personId": 10001
}

# reads all entries
GET http://localhost:8837/black/black-api/workcontracts/{{contractId}}
Content-Type: application/json

# deletes one entry
DELETE http://localhost:8837/black/black-api/workcontracts/{{contractId}}
Content-Type: application/json
